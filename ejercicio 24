package javaapplication9;

import java.util.Scanner;

/**
 *
 * @author inesb
 */
public class JavaApplication9 {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        // 24. Comprueba si un nÃºmero es positivo, negativo o cero.
        Scanner sn = new Scanner (System.in);
        System.out.println("Vamos a comprobar si el numero n es positivo, negativo o cero");
        double n = sn.nextDouble();
        
        if (n >= 1){
         System.out.println("El numero " + n + " es positivo");   
        }else {
            if (n == 0) {
                System.out.println("El numero " + n + " es cero"); 
        }else {
            if (n < 0)
                    System.out.println("El numero " + n + " es negativo");
            }

                }
        
        
    }
    
}
